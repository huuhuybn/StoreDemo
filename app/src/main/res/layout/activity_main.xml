<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtData"
        android:hint="Nhap du lieu..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="createCacheFile"
        android:text="Tao cache file" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadCacheFile"
        android:text="Hien thi cache file" />



    <Button
        android:layout_marginTop="32dp"
        android:text="Ghi vao the nho"
        android:onClick="writeToSDCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="loadFromSDCard"
        android:text="Hien thi du lieu tu the nho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="32dp"
        android:text="Save to Shared Preference"
        android:onClick="saveToSharedPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="loadFromSharedPref"
        android:text="Load from Shared Preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>